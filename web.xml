  <servlet-name>UpdateStudentMark</servlet-name>
  <url-pattern>/login/staff/update/mark</url-pattern>
  </servlet-mapping>
    
  <servlet>
  <servlet-name>RemoveStudent</servlet-name>
  <servlet-class>Servlet.RemoveStudentServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>RemoveStudent</servlet-name>
  <url-pattern>/login/staff/remove</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>SubjectPassPercentage</servlet-name>
  <servlet-class>Servlet.SubjectPassPercentageServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>SubjectPassPercentage</servlet-name>
  <url-pattern>/login/subject/pass/Percentage</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>DepartmentPassPercentage</servlet-name>
