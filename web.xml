  <servlet-name>AllStudentsList</servlet-name>
  <servlet-class>Servlet.AllDepartmentStudentsServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>AllStudentsList</servlet-name>
  <url-pattern>/login/allStudents</url-pattern>
  </servlet-mapping>
  
