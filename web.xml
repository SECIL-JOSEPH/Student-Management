  <servlet-name>topScorer</servlet-name>
  <servlet-class>Servlet.TopScorerServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>topScorer</servlet-name>
  <url-pattern>/login/subject/mark/topScorer</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>academicDetails</servlet-name>
  <servlet-class>Servlet.AcademicDetailsServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>academicDetails</servlet-name>
  <url-pattern>/login/subject/mark/academicDetails</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>AboveSubjectAverageCount</servlet-name>
  <servlet-class>Servlet.SubjectsAboveAverageAndCountServlet</servlet-class>
