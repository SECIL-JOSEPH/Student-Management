  <servlet-name>AllStaffsList</servlet-name>
  <servlet-class>Servlet.AllDepartmentStaffsServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>AllStaffsList</servlet-name>
  <url-pattern>/login/allStaffs</url-pattern>
  </servlet-mapping>
    
  <filter>
  <filter-name>NameValidation</filter-name>
  <filter-class>filter.NameFilter</filter-class>
  </filter>

  <filter-mapping>
  <filter-name>NameValidation</filter-name>
  <url-pattern>/login/student/add</url-pattern>
  </filter-mapping>
