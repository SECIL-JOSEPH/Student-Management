  <servlet-class>Servlet.SubjectAverageServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>SubjectAverage</servlet-name>
  <url-pattern>/login/subject/average</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>AboveSubjectAverage</servlet-name>
  <servlet-class>Servlet.markAboveSubjectAverageServlet</servlet-class>
  </servlet>
   
  <servlet-mapping> 
  <servlet-name>AboveSubjectAverage</servlet-name>
  <url-pattern>/login/subject/mark/aboveAverage</url-pattern>
  </servlet-mapping>
  
